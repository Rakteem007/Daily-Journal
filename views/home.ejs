<%- include('partials/header'); -%>

<div class="container">
  <h1>Home</h1>
  <p><%= homeContent %></p>
</div>

<% postDetails.forEach(function(post){ %>

<div class="container">
  <h1><%= post.title %></h1>

  <% const truncatedPost = post.description.substring(0,100) + "..." %>
  <p>
    <%= truncatedPost %>
    <a href="/posts/<%= post._id %>">Read More</a>
  </p>
</div>

<% });%> <%- include("partials/footer"); -%>
